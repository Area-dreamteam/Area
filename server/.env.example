# Database Configuration
POSTGRES_USER=area_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=area_db
POSTGRES_PORT=5432
POSTGRES_HOST=db

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# Frontend URL (for OAuth callbacks)
FRONT_URL=http://localhost:8081

# Cron Configuration
CRON_USER=root

# Email Service (for Email action/reaction)
EMAIL=your-email@example.com
EMAIL_PASSWORD=your-email-app-password

# GitHub OAuth
# Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# GitHub Link Service (separate app for linking repos)
GITHUB_LINK_CLIENT_ID=your_github_link_client_id
GITHUB_LINK_CLIENT_SECRET=your_github_link_client_secret

# Google OAuth (Calendar, Gmail)
# Get credentials at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Microsoft OAuth (Outlook, Calendar)
# Get credentials at: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_DIR_TENANT=common

# Discord OAuth
# Get credentials at: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
